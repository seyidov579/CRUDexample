<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="358dp">

    <ImageView
        android:id="@+id/heroPicture"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:layout_gravity="top"
        tools:srcCompat="@tools:sample/avatars"
        android:layout_marginBottom="30dp"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_alignBottom="@+id/heroPicture"
            android:text="Movie Name"
            android:background="@android:color/transparent"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:id="@+id/fab_edit"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_edit_desc"
            app:borderWidth="0dp"
            app:fabCustomSize="60dp"
            android:focusable="true"
            android:clickable="true"
            android:layout_alignBottom="@+id/heroPicture"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_alignParentBottom="true"
            app:elevation="5dp"
            android:backgroundTint="@color/colorPrimary"/>


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


        </ListView>

        <EditText
            android:id="@+id/detailHero"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_marginTop="391dp"
            android:clickable="false"
            android:cursorVisible="false"
            android:ems="10"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:inputType="textMultiLine"
            android:text="lksfoiwneoifjwioefwieifoewjfiowefiowejfeiowfjweiof" />

    </RelativeLayout>










